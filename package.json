{
  "name": "clock-timepicker",
  "description": "A simple and lightweight Web Component that allows you to pick a time or duration from a clock face. It is easy to use and fully customizable.",
  "license": "MIT",
  "author": "Andreas Marc Loeber",
  "version": "1.0.1",
  "type": "module",
  "main": "./dist/clock-timepicker.js",
  "module": "./dist/clock-timepicker.js",
  "types": "./dist/clock-timepicker.d.ts",
  "scripts": {
    "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"web-dev-server\"",
    "build": "tsc --build && terser ./dist/clock-timepicker.js --compress --mangle --module --output ./dist/clock-timepicker.js"
  },
  "devDependencies": {
    "@types/node": "^24.5.0",
    "@web/dev-server": "^0.4.6",
    "concurrently": "^9.2.1",
    "terser": "^5.44.0",
    "typescript": "^5.9.2"
  },
  "customElements": "custom-elements.json",
  "-vs-binding": {
    "ProjectOpened": [
      "start"
    ]
  }
}
